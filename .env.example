# Environment Configuration Template
# Copy this file to .env and customize the values for your environment
# IMPORTANT: Replace all example passwords with strong, unique values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rideshare_user
# REQUIRED: Set a strong password for PostgreSQL
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=rideshare

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=rideshare_user
# REQUIRED: Set a strong password for MongoDB
MONGODB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MONGODB_DB=rideshare_geo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Optional: Set password for Redis if auth is enabled
REDIS_PASSWORD=

# JWT Configuration
# REQUIRED: Generate a strong, random JWT secret key
# Example: openssl rand -base64 32
JWT_SECRET_KEY=CHANGE_ME_RANDOM_JWT_SECRET_KEY
JWT_EXPIRATION_HOURS=24

# Service Ports
USER_SERVICE_PORT=8081
VEHICLE_SERVICE_PORT=8082
GEO_SERVICE_PORT=8083
MATCHING_SERVICE_PORT=8084
PRICING_SERVICE_PORT=8085
TRIP_SERVICE_PORT=8086
PAYMENT_SERVICE_PORT=8087
API_GATEWAY_PORT=8080

# gRPC Ports
USER_SERVICE_GRPC_PORT=50051
VEHICLE_SERVICE_GRPC_PORT=50052
GEO_SERVICE_GRPC_PORT=50053
MATCHING_SERVICE_GRPC_PORT=50054
PRICING_SERVICE_GRPC_PORT=50055
TRIP_SERVICE_GRPC_PORT=50056
PAYMENT_SERVICE_GRPC_PORT=50057

# External Services
PAYMENT_PROCESSOR_URL=https://api.stripe.com
MAPS_API_KEY=CHANGE_ME_MAPS_API_KEY
SMS_SERVICE_URL=https://api.twilio.com
EMAIL_SERVICE_URL=https://api.sendgrid.com

# Security - THESE MUST BE CHANGED!
JWT_SECRET=CHANGE_ME_RANDOM_JWT_SECRET_KEY
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_ENCRYPTION_KEY

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development
GO_ENV=development
DEBUG=true
