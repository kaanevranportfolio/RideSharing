{
  "dashboard": {
    "id": null,
    "title": "Rideshare Platform - Business Metrics",
    "tags": ["rideshare", "business", "kpi"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Rides",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(active_trips_total)",
            "legendFormat": "Current Active Trips"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Available Drivers",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(available_drivers_total)",
            "legendFormat": "Available Drivers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "green",
                  "value": 50
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Trip Completion Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(trip_requests_total{status=\"completed\"}[5m]) / rate(trip_requests_total[5m]) * 100",
            "legendFormat": "Completion Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Revenue (Last Hour)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(trip_revenue_total[1h]))",
            "legendFormat": "Hourly Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Trip Requests Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trip_requests_total[5m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Requests/sec"
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "title": "Average Trip Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(trip_duration_seconds_bucket[5m]))",
            "legendFormat": "Median Duration"
          },
          {
            "expr": "histogram_quantile(0.95, rate(trip_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "Driver Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(active_drivers_total) / sum(total_drivers_total) * 100",
            "legendFormat": "Driver Utilization %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yAxes": [
          {
            "label": "Percentage",
            "max": 100,
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "Surge Pricing Areas",
        "type": "table",
        "targets": [
          {
            "expr": "surge_multiplier",
            "legendFormat": "{{area}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 30,
    "version": 1
  }
}
